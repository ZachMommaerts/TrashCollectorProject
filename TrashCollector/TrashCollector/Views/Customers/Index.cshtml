@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.History.IsPickedUp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.PickupDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.OneTimePickup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.Balance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Address.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(model => item.Account.History.IsPickedUp)
            </td>
            <td>
                @Html.DisplayFor(model => item.Account.PickupDay)
            </td>
            <td>
                @Html.DisplayFor(model => item.Account.OneTimePickup)
            </td>
            <td>
                @Html.DisplayFor(model => item.Account.Balance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            </td>
        </tr>
}
    </tbody>
</table>
